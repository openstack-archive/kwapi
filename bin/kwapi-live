import sys

from kwapi.plugins.live import app
from kwapi.utils import cfg, log

app_opts = [
    cfg.IntOpt('live_port',
               required=True,
               ),
    cfg.StrOpt('log_file',
               required=True,
               ),
]

cfg.CONF.register_opts(app_opts)


if __name__ == '__main__':
    cfg.CONF(sys.argv[1:],
             project='kwapi',
             default_config_files=['/etc/kwapi/live.conf']
             )
    log.setup(cfg.CONF.log_file)

    root = app.make_app()
    root.run(host='0.0.0.0', port=cfg.CONF.live_port)
